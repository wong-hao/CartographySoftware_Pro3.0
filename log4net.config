<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{StorageLocation}\"/>
		<appendToFile value="true" />
		<maximumFileSize value="2KB" />
		<param name="MaxSizeRollBackups" value="-1" />
		<rollingStyle value="Composite"/>
		<datePattern value="yyyy_MM_dd_hh'.log'"/>
		<staticLogFileName value="false" />
		<preserveLogFileNameExtension value="false" />
		<countDirection value="-1"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date{HH:mm:ss} [%level] : %message%newline" />
		</layout>
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="RollingFile" />
	</root>
</log4net>
